rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the user is the owner of the document
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Users collection
    match /users/{userId} {
      // Authenticated users can read user profiles (needed for app functionality)
      allow read: if request.auth != null;
      
      // Users can only update their own specific fields (cannot change role/status)
      // Admins update users via Cloud Functions with Admin SDK (bypasses these rules)
      allow update: if request.auth.uid == userId 
                   && request.resource.data.keys().hasOnly([
                     'name', 'department', 'departments', 'photoURL', 'pushEnabled', 
                     'updatedAt', 'email', 'emailLower', 'role', 'status',
                     'createdAt', 'failedLoginAttempts', 'accountLocked', 
                     'lockedUntil', 'lockedByAdmin', 'lastSignInAt'
                   ])
                   && request.resource.data.role == resource.data.role  // Cannot change own role
                   && request.resource.data.status == resource.data.status  // Cannot change own status
                   && (!request.resource.data.keys().hasAny(['accountLocked', 'lockedByAdmin']) 
                       || request.resource.data.accountLocked == resource.data.accountLocked)  // Cannot unlock self
                   && request.resource.data.email == resource.data.email;  // Cannot change email directly
      
      // Create and delete operations are handled by Cloud Functions with Admin SDK only
    }
    
    // Classrooms collection
    match /classrooms/{classroomId} {
      // Any authenticated user can read classrooms.
      // Any authenticated user can write (admin restrictions handled in app logic).
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Booking Requests collection
    match /bookingRequests/{requestId} {
      // Any authenticated user can create and read booking requests.
      allow create, read: if request.auth != null;

      // Updates are allowed for authenticated users but clients MUST NOT set status to 'expired'.
      // Only server/cloud-functions or admin agents should write 'expired'.
      // Additionally, clients are not allowed to spoof the 'updatedBy' field. If the client
      // includes updatedBy in the update payload, it must equal the caller's uid. Server-side
      // writes using the Admin SDK bypass these rules so server callables may set updatedBy
      // to values like 'system' or other user ids as appropriate.
      allow update: if request.auth != null
        && !(request.resource.data.status == 'expired' && !(request.auth.token.admin == true))
        && (
          // If client is not attempting to set updatedBy, allow the update
          !(request.resource.data.keys().hasAny(['updatedBy']))
          // Or, if they are setting updatedBy, it must equal their uid
          || (request.resource.data.updatedBy == request.auth.uid)
        );

      // Users can delete their own requests.
      allow delete: if request.auth != null && isOwner(resource.data.facultyId);
    }
    
    // Schedules collection
    match /schedules/{scheduleId} {
      // Any authenticated user can read schedules (to see availability).
      // Any authenticated user can create and update schedules.
      // Users can delete their own schedules.
      allow read, create: if request.auth != null;
      allow update: if request.auth != null;
      allow delete: if request.auth != null && isOwner(resource.data.facultyId);
    }
    
    // Signup Requests collection
    match /signupRequests/{requestId} {
      // Anyone can create a signup request.
      // Authenticated users can read and update signup requests.
      // Authenticated users can delete signup requests.
      allow create: if true;
      allow read, update, delete: if request.auth != null;
    }
    
    // Signup History collection
    match /signupHistory/{historyId} {
      // Only authenticated users can read signup history (admin functionality).
      // Only authenticated users can create signup history records.
      // No updates or deletes allowed to preserve audit trail integrity.
      allow read, create: if request.auth != null;
      allow delete: if request.auth != null; // Allow delete for cleanup operations
    }

    // Notifications collection - persistent until acknowledged
    match /notifications/{notificationId} {
      // Prevent client-side creation of notification documents. Notifications must be created
      // via server-side callable functions (createNotification). Callable function writes bypass rules.
      allow create: if false;

      // A user may read notifications addressed to them; admins may read all
      // Prefer custom claims (request.auth.token.admin) for admin checks to avoid costly rule reads
      allow read: if request.auth != null && (
        resource.data.userId == request.auth.uid || request.auth.token.admin == true
      );

      // Updates are restricted: only the owner (recipient) may acknowledge their notification
      // Force acknowledgedBy to be the caller and acknowledgedAt to equal server request time
      // Only allow the acknowledgement fields and updatedAt to change.
      allow update: if request.auth != null && (
        resource.data.userId == request.auth.uid &&
        // Only the acknowledgement fields + updatedAt may be present in the new document
        request.resource.data.keys().hasOnly(['acknowledgedBy','acknowledgedAt','updatedAt','userId','type','message','bookingRequestId','adminFeedback','createdAt']) &&
        // acknowledgedBy must be the caller
        request.resource.data.acknowledgedBy == request.auth.uid &&
        // acknowledgedAt must be the server request time (prevent client-supplied timestamp)
        request.resource.data.acknowledgedAt == request.time &&
        // Ensure immutable core fields are unchanged
        request.resource.data.userId == resource.data.userId &&
        request.resource.data.type == resource.data.type &&
        request.resource.data.message == resource.data.message &&
        request.resource.data.bookingRequestId == resource.data.bookingRequestId
      );

      // Only admins may delete notifications
      allow delete: if request.auth != null && (
        request.auth.token.admin == true
      );
    }

    // Push tokens collection
    // Push tokens are sensitive and must only be written via server-side callables that use
    // the Admin SDK (registerPushToken / unregisterPushToken). Deny client-side creates/updates/deletes.
    match /pushTokens/{tokenId} {
      // Allow reads for authenticated users only when the token belongs to them so the UI may
      // optionally check the current token. Writes are forbidden from client SDKs.
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create, update, delete: if false;
    }
  }
}
